	<name>MOD_DOWNFILES</name>
	<creationDate>December 2015</creationDate>
	<author>Matvey Zemskov</author>
	<authorEmail>info@mattweb.ru</authorEmail>
	<authorUrl>http://mattweb.ru</authorUrl>
	<copyright>(c) 2015 mattweb.ru</copyright>
	<license>License Info</license>
	<version>1.0.1</version>
	<description>MOD_DOWNFILES_DESCRIPTION</description>	
	<files>
		<folder>language</folder>
		<folder>tmpl</folder>
		<folder>media</folder>
		<filename module="mod_downfiles">mod_downfiles.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>	
	</files>
	<languages>
		<language tag="ru-Ru">language/ru-RU/ru-RU.mod_downfiles.ini</language>	
		<language tag="ru-Ru">language/ru-RU/ru-RU.mod_downfiles.sys.ini</language>			
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field type="text" name="count" default="3" label="MOD_DOWNFILES_FIELDCOUNT_LABEL" description="MOD_DOWNFILES_FIELDCOUNT_DESC" />
				<field type="editor" name="textbefore" label="MOD_DOWNFILES_FIELDTEXTBEFORE_LABEL" description="MOD_DOWNFILES_FIELDTEXTBEFORE_DESC" width="300" filter="safehtml" />
			</fieldset>
			<fieldset name="advanced">
				<field 
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>